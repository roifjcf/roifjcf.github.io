---
import PostByCategoryLayout from "../layouts/PostByCategoryLayout.astro";
const allPosts = Object.values(import.meta.glob(`./posts/life/*.md`, { eager: true }));
const tags = [...new Set(allPosts.map((post: any) => post.frontmatter.tags).flat())];
---
<PostByCategoryLayout allPosts={allPosts} tags={tags} category="life" />