---
let currentTheme = "/icons/moon.png"; // default

// localStorage is only available in browser
if (typeof window !== "undefined") {
  currentTheme = localStorage.getItem("theme") === "dark" ? "/icons/sun.png" : "icons/moon.png";
}
---

<img class="theme-button icon" src={currentTheme} alt="theme-button" draggable="false">

{/* <button class="theme-button">Theme</button> */}

<script>
  const html = document.documentElement;
  const themeButton = document.querySelector<HTMLImageElement>('.theme-button');

  const savedTheme = localStorage.getItem('theme') ?? 'light';
  html.setAttribute('data-theme', savedTheme);

  themeButton?.addEventListener('click', () => {
    const currentTheme = html.getAttribute('data-theme') ?? 'light';
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

    // update html + localStorage
    html.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);

    themeButton.src = newTheme === 'dark'
      ? "/icons/sun.png"
      : "/icons/moon.png";
  });
</script>